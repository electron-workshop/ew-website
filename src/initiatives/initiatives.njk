<h1 class="mb-4">Initiatives</h1>
<p class="text-secondary mb-4">
</p>

<style>
  .offering-logo{ max-height: 36px; width: auto; }
</style>

<div class="row g-4">
  {% for item in initiatives %}
    <div class="col-12 col-md-6 col-lg-4">
      <div class="card h-100 border-primary border-opacity-25 shadow-sm border-primary-hover">
        <div class="card-body d-flex flex-column">
          <div class="d-flex align-items-center gap-2 mb-2">
            {% if item.logo %}
              <img src="{{ item.logo }}" alt="{{ item.title }} logo" class="">
            {% endif %}
            <h2 class="h5 mb-0">{{ item.title }}</h2>
          </div>
          <p class="flex-grow-1">{{ item.text }}</p>
          <div>
          <a href="/initiatives/{{ item.slug }}/" class="stretched-link btn btn-primary" aria-label="{{ item.title }}">Read more</a>
          </div>
        </div>
      </div>
    </div>
  {% endfor %}
</div>

