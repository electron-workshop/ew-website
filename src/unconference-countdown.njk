<script>
  // Hide navbar for projector display
  document.addEventListener('DOMContentLoaded', function() {
    const navbar = document.querySelector('nav');
    const header = document.querySelector('header');
    if (navbar) navbar.style.display = 'none';
    if (header) header.style.display = 'none';
  });

  // Set the date for the unconference: Monday 22nd December 2025, 11am AEDT
  const unconferenceDate = new Date('2025-12-22T11:00:00+11:00').getTime();

  function updateCountdown() {
    const now = new Date().getTime();
    const distance = unconferenceDate - now;

    if (distance < 0) {
      // Event has started or passed
      document.getElementById('countdown').classList.add('d-none');
      document.getElementById('event-message').classList.remove('d-none');
      return;
    }

    // Calculate time units
    const days = Math.floor(distance / (1000 * 60 * 60 * 24));
    const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((distance % (1000 * 60)) / 1000);

    // Update the display
    document.getElementById('days').textContent = days;
    document.getElementById('hours').textContent = hours.toString().padStart(2, '0');
    document.getElementById('minutes').textContent = minutes.toString().padStart(2, '0');
    document.getElementById('seconds').textContent = seconds.toString().padStart(2, '0');
  }

  // Update countdown immediately and then every second
  updateCountdown();
  setInterval(updateCountdown, 1000);
</script>

